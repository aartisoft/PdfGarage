<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.HomeActivity"
    tools:showIn="@layout/activity_home">


    <Button
        android:id="@+id/button_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open PDF From Asset"
        />


    <Button
        android:id="@+id/button_create_pdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create PDF Window"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="218dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to select a pdf file" />


    <Button
        android:id="@+id/button_open_file_explorer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open File Explorer"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="219dp" />


    <TextView
        android:id="@+id/fileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File Name" />


    <Button
        android:id="@+id/button_collect_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Collect Image"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="218dp" />


    <Button
        android:id="@+id/button_collect_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Collect Text"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="218dp" />

    <TextView
        android:id="@+id/textview_text_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text:::" />


    <TextView
        android:id="@+id/textview_text_from_pdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="asdsadasdsada" />


</LinearLayout>